      {{ name }}_name:
        type: 'string'
      {{ name }}_virtual_network_name:
        type: 'string'
      {{ name }}_remote_virtual_network_id:
        type: 'string'
    output:
      id:
        value: '${azurerm_arm_virtual_network_peering.{{ name }}.id}'
      thub_id:
        value: '${azurerm_arm_virtual_network_peering.{{ name }}.id}'
      allow_virtual_network_access:
        value: '${azurerm_arm_virtual_network_peering.{{ name }}.allow_virtual_network_access}'
      allow_forwarded_traffic:
        value: '${azurerm_arm_virtual_network_peering.{{ name }}.allow_forwarded_traffic}'
