# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id                 = "123456789012"
region                     = "us-east-1"

#############
# top level #
#############
instance_name                    = "{{ name }}"
instance_ebs_optimized           = true
instance_disable_api_termination = true
instance_monitoring              = false
instance_spot_price              = "0.03"
instance_wait_for_fulfillment    = false
instance_spot_type               = "persistent"
instance_block_duration_minutes  = 60

#####################
# network_interface #
#####################
instance_device_index          = 0
instance_delete_on_termination = false

####################
# ebs block device #
####################
instance_ebs_device_name           = "/dev/sdb"
instance_ebs_volume_type           = "standard"
instance_ebs_volume_size           = 8
instance_ebs_delete_on_termination = true
instance_ebs_encrypted             = false

########
# tags #
########
custom_tags  = {}
default_tags = {
  "Name"        = "{{ name }}"
  "ThubCode"    = "{{ code }}"
  "ThubEnv"     = "default"
  "Description" = "Managed by TerraHub"
}

