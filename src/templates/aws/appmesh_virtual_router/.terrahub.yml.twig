      id:
        value: '${aws_appmesh_virtual_router.{{ name }}.id}'
      thub_id:
        value: '${aws_appmesh_virtual_router.{{ name }}.id}'
      arn:
        value: '${aws_appmesh_virtual_router.{{ name }}.arn}'
      created_date:
        value: '${aws_appmesh_virtual_router.{{ name }}.created_date}'
      last_updated_date:
